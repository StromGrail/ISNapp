<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"   
    android:background="#000000"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/left_menuimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin_10"
        android:background="@drawable/cart" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_8"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/pt_7"
        android:paddingLeft="@dimen/horizontal_margin_8"
        android:paddingRight="@dimen/horizontal_margin_16"
        android:textColor="@color/c_747474" />

</LinearLayout>