<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/left_childmenuimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin_30"
        android:background="@drawable/map" />

    <TextView
        android:id="@+id/articleContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin_12"
        android:layout_marginLeft="@dimen/horizontal_margin_8"
        android:layout_marginTop="@dimen/vertical_margin_16"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_margin_16"
        android:paddingRight="@dimen/horizontal_margin_16"
        android:textColor="#fff" />

</LinearLayout>