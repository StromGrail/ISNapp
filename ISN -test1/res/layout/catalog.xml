<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent" android:background="#ffffff">
 
 <TextView 
     android:id="@+id/TextView01c"
      android:layout_width="wrap_content"
  android:layout_height="wrap_content"
   android:textColor="#000000"
  android:textSize="24dip" 
  android:layout_margin="5dip"
   android:text="Product Catalog"></TextView>
 <ListView
      android:layout_height="wrap_content"
  android:layout_weight="1" 
  android:id="@+id/ListViewCatalogc"
  android:layout_width="fill_parent" 
  android:background="#ffffff"
  android:clickable="true" android:cacheColorHint="#ffffff">
 </ListView>
 <Button 
     android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:layout_margin="5dip"
  android:layout_gravity="right"
   android:id="@+id/ButtonViewCartc"
  android:text="View Shopping Cart"></Button>
</LinearLayout>